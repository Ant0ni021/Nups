<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/Salas_Editar.CSS">
    <title>Document</title>
</head>
<body>
    <div class="container mt-5">
    <h1 class="text-center my-4">Editar Sala</h1>

    <form action="/salas/{{sala.id}}?_method=PUT" method="POST">
        <!-- Campo Nome -->
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" class="form-control" value="{{sala.nome}}" required>
        </div>

        <!-- Campo Capacidade -->
        <div class="form-group">
            <label for="capacidade">Capacidade</label>
            <input type="number" id="capacidade" name="capacidade" class="form-control" value="{{sala.capacidade}}" required>
        </div>

        <!-- Campo Descrição -->
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea id="descricao" name="descricao" class="form-control">{{sala.descricao}}</textarea>
        </div>

        <!-- Botões -->
        <button type="submit" class="btn btn-primary">Atualizar Sala</button>
        <a href="/salas" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

    
</body>
</html>