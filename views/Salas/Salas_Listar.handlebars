<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Salas</title>
    <link rel="stylesheet" href="/CSS/Salas_Listar.CSS"> 
</head>
<body>
    <div class="container mt-5">
        <!-- Título da página -->
        <h1 class="text-center text-primary my-4">Lista de Salas</h1>

        <!-- Botão Adicionar Nova Sala -->
        <div class="d-flex justify-content-end mb-3">
            <a href="/salas/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Adicionar Nova Sala
            </a>
        </div>

        <!-- Tabela de Salas -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered mt-3">
                <thead class="table-primary">
                    <tr class="text-center">
                        <th>Nome</th>
                        <th>Capacidade</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Exemplo de dados -->
                    <tr>
                        <td>Sala A</td>
                        <td>20</td>
                        <td>Uma sala de reuniões com capacidade para 20 pessoas.</td>
                        <td class="text-center">
                            <a href="/salas/1/editar" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <form action="/salas/1?_method=DELETE" method="POST" style="display:inline;">
                                <input type="hidden" name="_csrf" value="csrfTokenValue">
                                <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Tem certeza que deseja deletar esta sala?');">
                                    <i class="bi bi-trash"></i> Deletar
                                </button>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>Auditorio</td>
                        <td>50</td>
                        <td>Auditório com capacidade para 50 pessoas e equipamento audiovisual.</td>
                        <td class="text-center">
                            <a href="/salas/2/editar" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <form action="/salas/2?_method=DELETE" method="POST" style="display:inline;">
                                <input type="hidden" name="_csrf" value="csrfTokenValue">
                                <button type="submit" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Tem certeza que deseja deletar esta sala?');">
                                    <i class="bi bi-trash"></i> Deletar
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Mensagem caso não haja salas -->
        <div class="alert alert-info text-center" role="alert">
            Nenhuma sala encontrada.
        </div>
    </div>
</body>
</html>
